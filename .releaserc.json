{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "build/*.elf", "label": "ELF Binary" },
          { "path": "build/*.bin", "label": "Binary Firmware" },
          { "path": "build/*.map", "label": "Memory Map" }
        ]
      }
    ]
  ]
}
